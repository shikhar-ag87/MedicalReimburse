# Environment Variables
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_TYPE=supabase

# Supabase Configuration  
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Alternative Database URLs (for modular database support)
POSTGRES_URL=postgresql://username:password@localhost:5432/medical_reimbursement
MYSQL_URL=mysql://username:password@localhost:3306/medical_reimbursement
MONGODB_URL=mongodb://localhost:27017/medical_reimbursement

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=noreply@jnu.ac.in
FROM_NAME=JNU Medical Centre

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx
UPLOAD_DIR=uploads
SUPABASE_STORAGE_BUCKET=medical-documents

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=admin@jnu.ac.in
SUPER_ADMIN_EMAIL=superadmin@jnu.ac.in

# Application Configuration
APP_NAME=JNU Medical Reimbursement System
APP_VERSION=1.0.0
BASE_URL=http://localhost:3001